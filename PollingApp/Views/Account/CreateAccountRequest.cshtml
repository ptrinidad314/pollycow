@{
    ViewBag.Title = "Polling App - Create Account Request";
}

@using PollingApp.Entities
@model AccountRequest

@await  Html.PartialAsync("_navigation")

<div class="createAccountRequestWrapper">
    <h1>Create Account Request</h1>

    <form action="/account/createaccountrequest" method="post">
        <input type="text" name="email" value="" placeholder="Enter your email..." required/>
        <input type="text" name="username" value="" placeholder="Enter your username..."/>
        <button type="submit">Sign Up</button>
    </form>
</div>